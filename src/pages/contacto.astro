---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import Header from "../components/Header.astro";
import ContactForm from "../components/Contact-form.astro";
---

<DefaultLayout>
    <Header />

    <main class="w-full">
        <!-- Hero Section -->
        <section
            class="w-full py-16 md:py-24 bg-gradient-to-br from-gray-50 to-white"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h1
                        class="text-4xl md:text-5xl font-bold text-neutral mb-4 font-lobster"
                    >
                        Contáctanos
                    </h1>
                    <p
                        class="text-xl text-neutral-light font-montserrat max-w-3xl mx-auto"
                    >
                        ¿Tienes un proyecto en mente? <span
                            class="text-primary font-semibold">Hablemos</span
                        >. Estamos listos para <span
                            class="text-primary font-semibold">ayudarte</span
                        > a hacer realidad tus ideas.
                    </p>
                </div>
            </div>
        </section>

        <!-- Contact Form Section -->
        <section class="w-full py-16 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <ContactForm />

                <!-- Contact Information -->
                <div class="mt-16 grid gap-8 md:grid-cols-3">
                    <div
                        class="flex flex-col items-center gap-4 rounded-lg border-2 border-gray-200 hover:border-primary bg-gray-50 p-6 transition-all duration-300 hover:shadow-lg"
                    >
                        <div
                            class="rounded-full border-2 border-primary bg-primary/10 p-4"
                        >
                            <svg
                                class="w-8 h-8 text-primary"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="font-bold text-xl text-neutral font-lobster">
                            Email
                        </h3>
                        <a
                            href="mailto:info@anicasolucionesintegrales.com"
                            class="text-primary hover:text-primary-dark transition-colors font-montserrat"
                        >
                            info@anicasolucionesintegrales.com
                        </a>
                    </div>

                    <div
                        class="flex flex-col items-center gap-4 rounded-lg border-2 border-gray-200 hover:border-secondary bg-gray-50 p-6 transition-all duration-300 hover:shadow-lg"
                    >
                        <div
                            class="rounded-full border-2 border-secondary bg-secondary/10 p-4"
                        >
                            <svg
                                class="w-8 h-8 text-secondary"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="font-bold text-xl text-neutral font-lobster">
                            Teléfono
                        </h3>
                        <a
                            href="tel:+50588555595"
                            class="text-secondary hover:text-secondary-dark transition-colors font-montserrat"
                        >
                            +505 8855-5595
                        </a>
                    </div>

                    <div
                        class="flex flex-col items-center gap-4 rounded-lg border-2 border-gray-200 hover:border-accent bg-gray-50 p-6 transition-all duration-300 hover:shadow-lg"
                    >
                        <div
                            class="rounded-full border-2 border-accent bg-accent/10 p-4"
                        >
                            <svg
                                class="w-8 h-8 text-accent"
                                fill="currentColor"
                                viewBox="0 0 64 64"
                            >
                                <use href="/assets/sprite.svg#location"></use>
                            </svg>
                        </div>
                        <h3 class="font-bold text-xl text-neutral font-lobster">
                            Ubicación
                        </h3>
                        <p
                            class="text-center text-neutral-light font-montserrat"
                        >
                            Managua, Nicaragua
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</DefaultLayout>
