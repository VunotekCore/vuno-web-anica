---
import HeroSlider from "../components/HeroSlider.astro";
---

<section class="w-full pt-20 pb-10">
  <div
    class="max-w-screen-xl mx-auto px-4 grid md:grid-cols-2 gap-16 items-center"
  >
    <!-- LEFT CONTENT: Slider -->
    <div class="w-full">
      <HeroSlider />
    </div>

    <!-- RIGHT CONTENT: Search + Contact + Social icons -->
    <div class="flex flex-col items-center gap-10">
      <!-- Search bar -->
      <div class="w-full max-w-sm">
        <div
          class="flex items-center bg-white border rounded-full shadow-sm px-5 py-3"
        >
          <input
            type="text"
            placeholder="Buscar servicios, productos, proyectos..."
            class="flex-1 outline-none text-sm"
          />
          <svg
            width="20"
            height="20"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M11 19l-4-4m0 0a6 6 0 1110.472-3.472A6 6 0 017 15z"></path>
          </svg>
        </div>
      </div>

      <!-- WhatsApp contact -->
      <div class="flex flex-col items-center text-center gap-2">
        <a
          href="https://wa.me/50499999999"
          class="flex items-center gap-3 bg-green-500 text-white px-5 py-2 rounded-full hover:bg-green-600 transition"
        >
          <svg width="22" height="22" fill="currentColor">
            <path
              d="M12.04 2c-5.52 0-10 4.48-10 10 0 1.76.46 3.46 1.34 4.98L2 22l5.2-1.33A10.02 10.02 0 0012.03 22c5.52 0 10-4.48 10-10s-4.48-10-10-10zm5.8 14.49c-.24.68-1.4 1.32-1.95 1.4-.5.08-1.12.11-1.81-.11-.42-.13-.96-.31-1.65-.61-2.91-1.26-4.8-4.18-4.95-4.38-.14-.19-1.18-1.57-1.18-3 0-1.42.74-2.12 1-2.41.26-.3.57-.37.76-.37.19 0 .38.01.54.01.18 0 .41-.07.64.49.24.57.82 1.97.89 2.12.07.14.12.31.02.5-.09.19-.13.31-.26.48-.13.17-.27.38-.38.51-.13.17-.27.35-.12.67.14.32.63 1.04 1.35 1.69.93.83 1.7 1.1 2.02 1.23.32.13.51.11.7-.06.19-.17.81-.95 1.02-1.27.22-.32.45-.27.76-.16.31.11 1.97.93 2.31 1.1.34.17.56.25.64.39.09.13.09.76-.15 1.44z"
            ></path>
          </svg>
          <span class="text-sm font-medium">+504 9999-9999</span>
        </a>
      </div>

      <!-- Social icons -->
      <div class="flex items-center gap-8 pt-4">
        <!-- Instagram -->
        <a
          href="#"
          class="p-3 rounded-full border hover:bg-black hover:text-white transition"
        >
          <svg width="20" height="20" fill="currentColor">
            <path
              d="M7 2C4.24 2 2 4.24 2 7v6c0 2.76 2.24 5 5 5h6c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm6 2c1.66 0 3 1.34 3 3v6c0 1.66-1.34 3-3 3H7c-1.66 0-3-1.34-3-3V7c0-1.66 1.34-3 3-3h6zm-3 2a4 4 0 100 8 4 4 0 000-8zm5-.5a1 1 0 110 2 1 1 0 010-2z"
            ></path>
          </svg>
        </a>

        <!-- Facebook -->
        <a
          href="#"
          class="p-3 rounded-full border hover:bg-black hover:text-white transition"
        >
          <svg width="18" height="18" fill="currentColor">
            <path
              d="M10 2h2V0h-2c-2.21 0-4 1.79-4 4v2H4v2h2v8h2V8h2l1-2h-3V4c0-.55.45-1 1-1z"
            ></path>
          </svg>
        </a>

        <!-- Location -->
        <a
          href="#"
          class="p-3 rounded-full border hover:bg-black hover:text-white transition"
        >
          <svg
            width="20"
            height="20"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M12 11a4 4 0 100-8 4 4 0 000 8zm0 1c-4 0-7 2-7 4v2h14v-2c0-2-3-4-7-4z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
