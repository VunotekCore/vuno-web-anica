---
import HeroSlider from "../components/HeroSlider.astro";
---

<!-- components/Hero.astro -->
<section
  class="w-full flex-shrink-0
    min-h-screen
    md:min-h-[calc(100vh-105px)]
    flex items-center justify-center
    py-8 md:py-0"
>
  <div class="w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 items-center">
      <!-- LEFT: Slider -->
      <div class="w-full flex justify-center">
        <HeroSlider />
      </div>

      <!-- RIGHT: Formulario + WhatsApp + Redes -->
      <div class="flex flex-col items-center gap-6 md:gap-10">
        <!-- Contenido Derecho -->
        <div class="w-full max-w-sm">
          <div
            class="flex items-center bg-white border border-[#515151] rounded-xl shadow-sm px-5 py-3"
          >
            <input
              type="text"
              placeholder="Buscar servicios, productos, proyectos..."
              class="flex-1 outline-none text-sm font-lobster"
            />
            <svg
              width="20"
              height="20"
              fill="none"
              stroke="#515151"
              stroke-width="2"
            >
              <path d="M11 19l-4-4m0 0a6 6 0 1110.472-3.472A6 6 0 017 15z"
              ></path>
            </svg>
          </div>
        </div>

        <!-- WhatsApp Contact -->
        <div class="fixed bottom-6 right-6 z-50 group">
          <!-- Círculo flotante grande con efecto glassmorphism + pulse -->
          <a
            href="https://wa.me/50588555595?text=¡Hola!%20Vengo%20de%20tu%20web%20y%20me%20gustaría%20hablar%20contigo%20%F0%9F%98%8A"
            target="_blank"
            rel="noopener"
            class="fixed bottom-5 right-5 z-50 group flex items-center justify-center
         hover:scale-110 hover:shadow-xl
         transition-all duration-500
         border border-white/10
         animate-float"
            aria-label="Chatea por WhatsApp"
          >
            <!-- Icono WhatsApp en verde oficial #25D366 + sombra verde sutil -->
            <svg
              width="36"
              height="36"
              class="w-7 h-7 md:w-16 md:h-16 drop-shadow-lg"
              fill="#515151"
            >
              <use xlink:href="./assets/sprite.svg#wp"></use>
            </svg>

            <!-- class="w-7 h-7 md:w-16 md:h-16 drop-shadow-lg" -->

            <!-- Pulse estilo "online" como WhatsApp real -->
            <span class="absolute -top-0.1 -right-0.1">
              <!-- ← esta línea es la clave -->
              <span class="relative flex h-6 w-6">
                <span
                  class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#ddd]"
                ></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-[#]"
                ></span>
              </span>
            </span>

            <!-- Tooltip elegante al hacer hover (solo desktop) -->
            <span
              class="absolute right-full mr-4 top-1/2 -translate-y-1/2
                   px-4 py-2 bg-[#515151] text-white text-sm rounded-2xl
                   opacity-0 group-hover:opacity-100 pointer-events-none
                   transition-opacity duration-300 whitespace-nowrap
                   before:absolute before:left-full before:top-1/2 before:-translate-y-1/2
                   before:border-8 before:border-transparent before:border-l-[#515151]"
            >
              ¡Hablemos por WhatsApp!
            </span>
          </a>
        </div>

        <!-- Social icons -->
        <div
          class="flex items-center gap-8 md:gap-12 pt-2 md:pt-4 mt-2 md:mt-3 font-montserrat"
        >
          <!-- Instagram -->
          <a
            href="#"
            class="transition hover:text-heading-1 hover:scale-105"
            target="_blank"
            title="Estamos en instagram"
          >
            <svg
              width="36"
              height="36"
              class="md:w-[42px] md:h-[42px]"
              fill="#515151"
            >
              <use xlink:href="./assets/sprite.svg#instagram"></use>
            </svg>
            <span class="sr-only">social link</span>
          </a>

          <!-- Facebook -->
          <a
            href="#"
            class="transition hover:text-heading-1 hover:scale-105"
            target="_blank"
            title="Estamos en facebook"
          >
            <svg
              width="36"
              height="36"
              class="md:w-[42px] md:h-[42px]"
              fill="#515151"
            >
              <use xlink:href="./assets/sprite.svg#fb"></use>
            </svg>
            <span class="sr-only">Facebook Link</span>
          </a>
          <!-- Location -->
          <a
            href="#"
            class="transition hover:text-heading-1 hover:scale-105"
            target="_blank"
            title="Nuestra ubicación"
          >
            <svg
              width="36"
              height="36"
              class="md:w-[42px] md:h-[42px]"
              fill="#515151"
            >
              <use xlink:href="./assets/sprite.svg#location"></use>
            </svg>
            <span class="sr-only">social link</span>
          </a>
        </div>
        <div
          class="flex items-center gap-3 pt-4 text-[#515151] hover:text-heading-1 transition cursor-pointer font-montserrat"
        >
          <a
            href="mailto:info@anicasolucionesintegrales.com"
            class="pt-4 px-5 py-3 transition text-[#515151] text-2xl flex items-center gap-3"
          >
            <svg
              width="20"
              height="20"
              fill="none"
              stroke="#515151"
              stroke-width="1.5"
              class="text-gray-700"
            >
              <path d="M2 4l8 6 8-6M2 4h16v12H2z"></path>
            </svg>

            <span class="font-medium">Contactanos por correo</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
